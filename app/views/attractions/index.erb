<h1 class="centre"> All Attractions </h1>
<h3 class="centre"> <a href="/attractions/new"> Add Attraction </a></h3>
<% if @attractions.empty? %>
    <h4>Oh dear, there are no attractions, better add one!</h4>
<% else %>
    <% @attractions.each do |attraction| %>
        <div>
            <%= attraction.name %>
             <p> <%= attraction.location %> <p>
            <% if attraction.visited %>
                <p> <%= attraction.user %> has been there </p>
            <% else %>
                <p> <%= attraction.user %> wants to go there </p>
            <% end %>
            <p> <%= attraction.comments %> <p>
        </div>
    <% end %>
 <% end %>