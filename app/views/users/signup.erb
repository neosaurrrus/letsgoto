<h1>Sign in Page</h1>
<% if flash.has?(:sign_in_notice)%>
  <h4 class="flash-failure"><%= flash[:sign_in_notice] %></h4>
<% end %>
<form action="/users/signup" method="POST">
    <label for="username">Username: </label>
    <input type="text" name="user[username]" id="username">
    <br>
    <label for="password">Password: </label>
    <input type="text" name="user[password]" id="password">
    <br>
    <label for="password">Confirm Password: </label>
    <input type="text" name="password_confirm" id="password_confirm">
    <br>
    <input type="submit" value="Sign up!">
</form>
